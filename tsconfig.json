{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "out/build/server",
    "target": "es2022",
    "baseUrl": "./src",
    "paths": {
      "@server/*": ["server/*"]
    },
    "typeRoots": ["./server/@types"]
  },
  "include": ["src/**/*"],
}